@using PagedList.Mvc;
@using travelH2tour.Models;
@model  PagedList.PagedList<travelH2tour.Models.LOAITOUR>
@{
    ViewBag.Title = "Danh sách loại tour";
    Layout = "~/Areas/AdminH2T/Views/Shared/_LayoutAdminH2T.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        DANH SÁCH LOẠI TOUR
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("THEM_LT","QLloaitour")" class="btn btn-sm btn-success">Thêm</a>
                    <a href="@Url.Action("THUNGRAC","QLloaitour")" class="btn btn-sm btn-danger">Thùng rác</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-center">
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Tên loại tour</th>
                    <th>Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox" /></td>
                        <td class="text-center">@item.MALOAITOUR</td>
                        <td>@item.TENLOAITOUR</td>
                        <td>
                            
                            <a href="@Url.Action("CAPNHAT_KH","QLkhachhang",new { id = item.MALOAITOUR })" class="btn btn-sm btn-success"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("CHITIET","QLkhachhang",new { id = item.MALOAITOUR })" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                            <a href="@Url.Action("Xoatam","QLkhachhang",new { id = item.MALOAITOUR })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                         </td>
</tr>
                }
            </table>

        </div>
        <div class="card-footer">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("", new { page = page }))
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                }

                    .MenuTrang li a {
                        color: black;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                    }
            </style>
        </div>
    </div>
</section>
