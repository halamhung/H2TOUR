
@model travelH2tour.Models.NHANVIEN
@{
    ViewBag.Title = "Thêm nhân viên";
    Layout = "~/Areas/AdminH2T/Views/Shared/_LayoutAdminH2T.cshtml";
}
@*thêm thuộc tính cho form để up ảnh*@
@using (Html.BeginForm("THEM_NV", "QLnhanvien", FormMethod.Post, new {@enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
   
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        THÊM NHÂN VIÊN ;  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <button class="btn btn-success btn-sm" type="submit">Lưu</button>
                    <a href="@Url.Action("","QLnhanvien")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-9 ">
                    <div class="mb-3">
                        <label for="name">Họ tên khách:</label>
                        @Html.EditorFor(model => model.TENNV, new { htmlAttributes = new { @class = "form-control" } })
        

                    </div>
                    <div class="form-group">
                        <label for="name">Tài khoản:</label>
                        @Html.EditorFor(model => model.TAIKHOAN_NV, new { htmlAttributes = new { @class = "form-control" } })
                
                    </div>

                    <div class="form-group">

                        <label for="name">Mật khẩu:</label>
                        @Html.EditorFor(model => model.MATKHAU_NV, new { htmlAttributes = new { @class = "form-control", id = "matkhau", type = "password" } })
                     


                    </div>

                    <div class="form-group">
                        <label for="name">CCCD:</label>
                        @Html.EditorFor(model => model.CMND_CCCD_NV, new { htmlAttributes = new { @class = "form-control" } })
                    

                    </div>


                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="name">Giới tính:</label>
                        <select class="form-control" id="gioitinh" name="gioitinh">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                            <option value="Khác">Khác</option>
                        </select>
                    </div>



                    <div class="form-group">
                        <label for="name">Ngày sinh:</label>
                        @Html.TextBoxFor(m => m.NGAYSINH, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })

                    </div>

                    <div class="form-group">
                        <label for="name">Hình ảnh nhân viên:</label>
                        <div class="col-md-10">
                            <img id="imgPreview" width="200px" height="200px" src="#" alt="Preview Image" />
                            <input type="file" id="fileUpLoad" name="fileUpLoad" accept="image/jpeg, image/png, image/jpeg" onchange="previewImage()" />
                            
                        </div>

                    </div>
                    <script>
                        function previewImage() {
                            var preview = document.querySelector('#imgPreview');
                            var file = document.querySelector('#fileUpLoad').files[0];
                            var reader = new FileReader();

                            reader.onloadend = function () {
                                preview.src = reader.result;
                            }

                            if (file) {
                                reader.readAsDataURL(file);
                            } else {
                                preview.src = "#";
                            }
                        }
                    </script>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button class="btn btn-success btn-sm" type="submit">Lưu</button>
            <a href="@Url.Action("Index","QLnhanvien")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
        </div>

    </div>

</section>
}

}

