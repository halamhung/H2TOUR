
@using PagedList.Mvc;
@using travelH2tour.Models;
@model  PagedList.PagedList<travelH2tour.Models.KHACHHANG>
@{
        ViewBag.Title = "Thùng rác khách hàng";
        Layout = "~/Areas/AdminH2T/Views/Shared/_LayoutAdminH2T.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                       THÙNG RÁC DANH SÁCH KHÁCH HÀNG
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("","QLkhachhang")" class="btn btn-sm btn-primary"> <i class="fas fa-arrow-circle-left"></i>Về lại danh sách</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>CMND</th>
                    <th>Ảnh khách</th>
                    <th>Ngày tạo</th>
                    <th>Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox" /></td>
                        <td class="text-center">@item.MAKH</td>
                        <td>@item.TENKH</td>
                        <td>@item.EMAIL</td>
                        <td class="text-center">@item.GIOITINH</td>
                        <td>@item.NGAYSINH</td>
                        <td>@item.CMND_CCCD_KH</td>
                        <td><img style="width:120px" src="@Url.Content("~/dbHinhKH/"+item.HINHKHACHHANG)" /></td>
                        <td>@item.NGAYTAO</td>
                        <td class="text-center">
                            <a href="@Url.Action("CHITIET","QLkhachhang",new { id = item.MAKH })" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                            <a href="@Url.Action("XOA_KH","QLkhachhang",new { id = item.MAKH })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </table>

        </div>
        <div class="card-footer">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("THUNGRAC", new { page = page }))
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                }

                    .MenuTrang li a {
                        color: black;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                    }
            </style>
        </div>
    </div>
</section>

