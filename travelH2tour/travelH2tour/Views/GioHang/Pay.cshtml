@using travelH2tour.Models
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    input[type=submit] {
        background-color: #04AA6D;
        border: none;
        color: white;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>


@{
    KHACHHANG kh = (KHACHHANG)Session["KHACHHANG"];
}
<div style="padding: 0 350px">
    <h2>Pay</h2>
    <h2>Thong tin dat hang</h2>
    <table class="table ">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <thead>
                <tr></tr>
                <tr></tr>
            </thead>
            <tbody>
                <tr>
                    <td>Họ tên khách hàng</td>
                    <td>@kh.TENKH</td>
                </tr>
                <tr>
                    <td>Giới Tính</td>
                    <td>@kh.GIOITINH</td>
                </tr>
                <tr>
                    <td>CMND/CCCD</td>
                    <td>@kh.CMND_CCCD_KH</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@kh.EMAIL</td>
                </tr>
                <tr>
                    <td>Ngày Đặt Tour</td>
                    <td>@DateTime.Now.ToShortDateString()</td>
                </tr>
                <tr>
                    <td> <input type="submit" value=" Đồng ý đặt Tour" /></td>
                </tr>
            </tbody>
        }

    </table>
</div>


