
@{
    ViewBag.Title = "DetailBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">

                    <div class="white-box text-center"><img src="~/img/@Model.HINHBLOG" style="width: 350px; height:300px" class="img-responsive"></div>
                    <div style="margin-top:30px">
                        <small class="m-0"><i class="fas fa-file-signature text-primary"></i> @Model.TENBLOG</small>
                        <small class="m-0"><i class="fa fa-calendar-alt text-primary mr-2 m-2"></i> @Model.NGAYDANG</small>
                        <small class="m-0"><i class="fa fa-user text-primary mr-2 m-2"></i>@Model.TAIKHOAN_ADMIN</small>
                    </div>

                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">@Model.TENBLOG</h4>
                    <p>@Model.NOIDUNG</p>
                    <h2 class="mt-5">
                        <small class="text-success"></small>
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>

